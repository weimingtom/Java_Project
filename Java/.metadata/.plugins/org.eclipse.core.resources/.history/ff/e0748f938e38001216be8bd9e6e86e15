class locationcontroller {
	//控制页面位置以及是否被拖拽
	private Point loc ;
	private Point tmp ;
	private boolean isDragged;
	locationcontroller (){
		loc = null;
		tmp = null;
		isDragged = false;
	}
}

class titlesetter {
